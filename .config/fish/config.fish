set EDITOR vim -u ~/.vimrc

alias c="clear_screen"
alias ls="ls -hGl --color=auto"
alias l="ls -hGl --color=auto"
alias q="exit"
alias gc="git commit"
alias gd="git diff"
alias gs="git status"
alias ga="git add"
alias pacman="sudo pacman --color always"
alias cp="cp -r"
alias train="python3 ~/scripts/train.py"
alias neofetch="neofetch --config ~/.config/neofetch/neofetch.conf"

fundle plugin 'tuvistavie/fish-ssh-agent'

alias gitssh='__ssh_agent_start'
